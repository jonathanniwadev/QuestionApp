<Page
    x:Class="QuestionApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuestionApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Padding="20">
                <TextBlock FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,20" Text="Login" />

                <TextBox x:Name="usernameBox" PlaceholderText="Username" FontSize="20" Margin="0,100,0,20" />

                <PasswordBox x:Name="passwordBox" PlaceholderText="Password" FontSize="20" Margin="0,150,0,20" />

                <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,200,0,0" Width="200" Click="LoginButton_Click"/>

                <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,250,0,0">
            Don't have an account? <Hyperlink Click="SignUpLink_Click">Sign Up</Hyperlink>
                </TextBlock>
            </Grid>
        </Page>



